@namespace Coding.Blog.Client.Components

@if (Tags.Any())
{
    foreach (var tag in Tags)
    {
        <a href="@($"/search?t={HttpUtility.UrlEncode(tag)}")">
            <span class="badge bg-secondary hover-badge mx-1">
                @tag
            </span>
        </a>
    }
}

@code {
    [Parameter]
    public IEnumerable<string> Tags { get; set; } = [];
}
